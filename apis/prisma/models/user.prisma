model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  password  String?
  isVerfied Boolean  @default(false)
  email     String   @unique
  picture   String?
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  ownedClassrooms        Classroom[]
  authoredFeedItems      FeedItem[]
  submissions            Submission[]
  folders                Folder[]
  usersFoldersClassrooms UsersFoldersClassrooms[]

  // Relations
  tokens   Token[]

  @@map("users")
}