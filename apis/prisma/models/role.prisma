// Path: apis/prisma/models/role.prisma
// Role: Defines Role model used by classroom invitations and user-folder-classroom junctions

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?

  // Relations
  usersFoldersClassrooms UsersFoldersClassrooms[]
  invitations            Invitation[]

  @@map("roles")
}


